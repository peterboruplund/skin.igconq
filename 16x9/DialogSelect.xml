<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- selectdialog -->
	<defaultcontrol always="true">3</defaultcontrol>
	<include>WindowFadeAnimation</include>
	<controls>

		<!-- Background -->
		<include>WindowBackgroundImage</include>

		<!-- Curve -->
		<control type="image">
			<right>20</right>
			<top>20</top>
			<width>1280</width>
			<height>1040</height>
			<texture border="40,0,0,0">common/Curve.png</texture>
			<visible>Skin.HasSetting(ShowCurve)</visible>
		</control>

		<include name="Time">
			<param name="heading">$INFO[Control.GetLabel(1)]</param>
		</include>

		<!-- Heading -->
		<control type="label" id="1">
			<left>-15000</left>
			<top>96</top>
			<width>1620</width>
			<height>72</height>
			<font>Font72</font>
		</control>

		<!-- Image -->
		<control type="image">
			<left>150</left>
			<top>225</top>
			<width>405</width>
			<height>600</height>
			<texture>$INFO[Container(6).ListItem.Icon]</texture>
			<aspectratio aligny="center">keep</aspectratio>
			<visible>Control.IsVisible(6) + !String.Contains(Container(6).ListItem.Icon,Default)</visible>
		</control>
		<control type="image">
			<left>150</left>
			<top>225</top>
			<width>405</width>
			<height>600</height>
			<texture>$INFO[Container(6).ListItem.Icon]</texture>
			<colordiffuse>OverlayColorFO</colordiffuse>
			<aspectratio aligny="center">keep</aspectratio>
			<visible>Control.IsVisible(6) + String.Contains(Container(6).ListItem.Icon,Default)</visible>
		</control>

		<!-- Scrollbar -->
		<control type="scrollbar" id="60">
			<left>690</left>
			<centertop>50%</centertop>
			<width>20</width>
			<height>692</height>
			<onleft>5</onleft>
			<onright condition="Control.IsVisible(3)">3</onright>
			<onright condition="Control.IsVisible(6)">6</onright>
			<showonepage>false</showonepage>
			<orientation>vertical</orientation>
			<colordiffuse>OverlayColorNF</colordiffuse>
			<texturesliderbackground border="11,1,1,1">common/ScrollBackground.png</texturesliderbackground>
			<texturesliderbar border="11,1,1,1">common/ScrollbarGripNF.png</texturesliderbar>
			<texturesliderbarfocus border="11,1,1,1" colordiffuse="DialogOverlayColorFO">common/ScrollbarGripFO.png</texturesliderbarfocus>
			<textureslidernib>-</textureslidernib>
			<textureslidernibfocus>-</textureslidernibfocus>
			<visible>!Skin.HasSetting(Scrollbars)</visible>
		</control>

		<!-- List -->
		<control type="list" id="3">
			<left>750</left>
			<top>235</top>
			<width>1050</width>
			<height>696</height>
			<onup>6</onup>
			<ondown>5</ondown>
			<onleft>60</onleft>
			<onright>6</onright>
			<orientation>vertical</orientation>
			<viewtype label="list">list</viewtype>
			<scrolltime tween="sine" easing="out">240</scrolltime>
			<pagecontrol>60</pagecontrol>

			<itemlayout width="1050" height="58">
				<control type="label">
					<width>1050</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
				</control>
			</itemlayout>

			<focusedlayout width="1050" height="58">
				<control type="label">
					<width>1050</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>$VAR[DialogColor1]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>Control.HasFocus(3)</visible>
				</control>
				<control type="label">
					<width>1050</width>
					<height>58</height>
					<font>Font36</font>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<visible>!Control.HasFocus(3)</visible>
				</control>
			</focusedlayout>

		</control>

		<!-- List -->
		<control type="list" id="6">
			<left>750</left>
			<top>235</top>
			<width>1050</width>
			<height>672</height>
			<onup>noop</onup>
			<ondown>5</ondown>
			<onleft>60</onleft>
			<onright>5</onright>
			<orientation>vertical</orientation>
			<pagecontrol>60</pagecontrol>
			<scrolltime tween="sine" easing="out">240</scrolltime>

			<itemlayout width="1050" height="96">
				<control type="image">
					<width>96</width>
					<height>96</height>
					<bordersize>6</bordersize>
					<aspectratio>scale</aspectratio>
					<texture>$INFO[ListItem.Icon]</texture>
					<animation effect="fade" start="100" end="75" condition="True">Conditional</animation>
				</control>
				<control type="label">
					<left>140</left>
					<top>10</top>
					<width>1030</width>
					<height>36</height>
					<font>Font36</font>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Label]</label>
					<animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Property(Addon.Summary))">Conditional</animation>
				</control>
				<control type="label">
					<left>140</left>
					<top>54</top>
					<width>1030</width>
					<height>27</height>
					<font>Font27</font>
					<textcolor>$VAR[DialogColor2]</textcolor>
					<label>$INFO[ListItem.Property(Addon.Summary)]</label>
				</control>
			</itemlayout>

			<focusedlayout width="1050" height="96">
				<control type="image">
					<width>96</width>
					<height>96</height>
					<bordersize>6</bordersize>
					<aspectratio>scale</aspectratio>
					<texture>$INFO[ListItem.Icon]</texture>
					<animation effect="fade" start="100" end="75" condition="!Control.HasFocus(6)">Conditional</animation>
				</control>
				<control type="group">
					<visible>Control.HasFocus(6)</visible>
					<control type="label">
						<left>140</left>
						<top>10</top>
						<width>910</width>
						<height>36</height>
						<font>Font36</font>
						<textcolor>$VAR[DialogColor1]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Property(Addon.Summary))">Conditional</animation>
					</control>
					<control type="label">
						<left>140</left>
						<top>54</top>
						<width>910</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>$VAR[DialogColor1]</textcolor>
						<label>$INFO[ListItem.Property(Addon.Summary)]</label>
					</control>
				</control>
				<control type="group">
					<visible>!Control.HasFocus(6)</visible>
					<control type="label">
						<left>140</left>
						<top>10</top>
						<width>910</width>
						<height>36</height>
						<font>Font36</font>
						<textcolor>$VAR[DialogColor2]</textcolor>
						<label>$INFO[ListItem.Label]</label>
						<animation effect="slide" end="0,18" condition="String.IsEmpty(ListItem.Property(Addon.Summary))">Conditional</animation>
					</control>
					<control type="label">
						<left>140</left>
						<top>54</top>
						<width>910</width>
						<height>27</height>
						<font>Font27</font>
						<textcolor>$VAR[DialogColor2]</textcolor>
						<label>$INFO[ListItem.Property(Addon.Summary)]</label>
					</control>
				</control>
			</focusedlayout>

		</control>

		<!-- Get more button -->
		<control type="button" id="5">
			<left>750</left>
			<top>926</top>
			<width>400</width>
			<height>66</height>
			<onleft>noop</onleft>
			<onright>noop</onright>
			<onup>3</onup>
			<ondown>noop</ondown>
		</control>

	</controls>

</window>
