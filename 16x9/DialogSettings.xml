<?xml version="1.0" encoding="UTF-8"?>
<window>
	<!-- profilesettings -->
	<defaultcontrol always="true">5</defaultcontrol>
	<include>DialogZoomAnimation</include>

	<controls>
		<control type="group">
			<animation effect="fade" start="100" end="0" time="200" condition="Window.IsVisible(SliderDialog) | Window.IsVisible(FileBrowser)">Conditional</animation>

			<!-- Background -->
			<include>DialogBackgroundImage</include>

			<include content="Time">
				<param name="heading">$INFO[Control.GetLabel(2)]</param>
			</include>

			<!-- Grouplist -->
			<control type="grouplist" id="5">
				<left>600</left>
				<top>200</top>
				<width>1200</width>
				<height>720</height>
				<itemgap>0</itemgap>
				<onleft>9001</onleft>
				<onright>9001</onright>
				<onup>noop</onup>
				<ondown>9001</ondown>
				<orientation>vertical</orientation>
				<scrolltime tween="sine" easing="out">240</scrolltime>
			</control>

			<!-- Default label -->
			<control type="label" id="14">
				<width>1200</width>
				<height>42</height>
				<font>Font33</font>
				<align>center</align>
				<label>-</label>
				<textcolor>$VAR[TextColor1]</textcolor>
			</control>

			<!-- Default button -->
			<control type="button" id="7">
				<width>1200</width>
				<height>66</height>
			</control>

			<!-- Default radiobutton -->
			<control type="radiobutton" id="8">
				<width>1200</width>
				<height>66</height>
				<textwidth>1120</textwidth>
			</control>

			<!-- Default spincontrolex -->
			<control type="spincontrolex" id="9">
				<width>1200</width>
				<height>66</height>
				<textwidth>1120</textwidth>
			</control>

			<!-- Default edit -->
			<control type="edit" id="12">
				<width>1200</width>
				<height>66</height>
			</control>

			<!-- Default slider -->
			<control type="sliderex" id="13"> 
				<width>1200</width>
				<height>66</height>
				<texturesliderbar border="10,0,10,0">osd/OSDSliderBack.png</texturesliderbar>
				<textureslidernib border="10,0,10,0">osd/OSDSliderNib.png</textureslidernib>
				<textureslidernibfocus border="10,0,10,0">osd/OSDSliderNib.png</textureslidernibfocus>
			</control>

			<!-- Default image -->
			<control type="image" id="11">
				<width>1200</width>
				<height>20</height>
				<texture border="1,12,1,1" colordiffuse="DialogOverlayColorNF">common/ScrollBackgroundHorizontal.png</texture>
			</control>

			<!-- Button grouplist -->
			<control type="grouplist" id="9001">
				<left>600</left>
				<top>926</top>
				<width>1200</width>
				<itemgap>30</itemgap>
				<onleft>noop</onleft>
				<onright>noop</onright>
				<onup>5</onup>
				<ondown>noop</ondown>
				<defaultcontrol>28</defaultcontrol>
				<orientation>horizontal</orientation>

				<!-- OK Button -->
				<control type="button" id="28">
					<width>Auto</width>
				</control>

				<!-- Cancel Button -->
				<control type="button" id="29">
					<width>Auto</width>
				</control>

				<!-- Clear Button -->
				<control type="button" id="30">
					<width>Auto</width>
				</control>

			</control>

			<!-- Heading -->
			<control type="label" id="2">
				<left>-10000</left>
				<top>-10000</top>
				<width>1620</width>
				<height>72</height>
				<font>Font72</font>
				<textcolor>$VAR[DialogColor1]</textcolor>
				<label>-</label>
			</control>
		</control>

	</controls>

</window>